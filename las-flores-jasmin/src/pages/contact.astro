---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact | Las Flores Jasmin</title>
    <meta name="description" content="Get in touch with Las Flores Jasmin" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  </head>
  <body class="font-sans bg-white text-gray-800">
    <NavBar />

    <main class="max-w-2xl mx-auto px-4 py-12">
      <h1 class="text-3xl font-bold text-center text-rose-700 mb-6">Contact Us</h1>
      <p class="text-center text-gray-600 mb-8">
        We'd love to hear from you! Fill out the form below and we'll be in touch soon.
      </p>

      <form id="contactForm" action="/contact" method="POST" class="space-y-6" novalidate>
        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700">Name</label>
          <input
            type="text"
            name="name"
            placeholder="Your name"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500 bg-white"
            required
          />
        </div>

        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700">Email</label>
          <input
            type="email"
            name="email"
            placeholder="you@example.com"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500 bg-white"
            required
          />
        </div>

        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700">Message</label>
          <textarea
            rows="5"
            name="message"
            placeholder="Write your message here..."
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500 bg-white"
            required
          ></textarea>
        </div>

        <!-- Honeypot: bots often fill this, humans never see it -->
        <input
          type="text"
          name="phone_number"
          tabindex="-1"
          autocomplete="off"
          aria-hidden="true"
          style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;"
        />

        <!-- Invisible reCAPTCHA button -->
        <button
          id="sendBtn"
          class="contact-button g-recaptcha"
          data-sitekey="6LdabqQrAAAAAMoya25p4VBy93G5KxpvhIxvnIIi"
          data-callback="onRecaptcha"
          data-size="invisible"
          data-action="submit"
          type="button"
        >
          Send Message
        </button>
      </form>

      <div id="form-message" class="text-center mt-4 text-lg font-semibold"></div>

      <!-- Divider -->
      <div class="relative w-full h-1 my-12 overflow-hidden">
      <div class="divider-line absolute left-1/2 top-0 h-full bg-pink-300 rounded-full"></div>
    </div>


      <!-- Location Map -->
      <section class="mt-12">
        <h2 class="text-2xl font-bold text-pink-600 mb-4 text-center">
          Proudly Serving Bellwood, IL
        </h2>
        <p class="text-center text-gray-600 mb-6">
          We’re located in Bellwood and offer beautiful floral arrangements for pickup. Once your order is ready, you’ll be notified to stop by and pick it up at your convenience.
        </p>
        <div class="w-full aspect-video max-w-4xl mx-auto rounded-xl overflow-hidden shadow-md border-4 border-pink-300 mb-16">

          <iframe
            aria-label="Google Map showing Bellwood, IL"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11882.051310803292!2d-87.88943032714837!3d41.88182696566544!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880e4ac19095ff81%3A0xc4eda8ba5213943!2sBellwood%2C%20IL!5e0!3m2!1sen!2sus!4v1753759024671!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </section>
    </main>

     <script>
      const form = document.getElementById('contactForm');
      const btn  = document.getElementById('sendBtn');
      const messageDiv = document.getElementById('form-message');

      // Called by Google when CAPTCHA finishes
      async function onRecaptcha(token) {
        try {
          messageDiv.textContent = "Sending...";
          messageDiv.className = "text-center mt-4 text-lg font-semibold text-gray-500";

          const formData = new FormData(form);
          // Ensure the token is sent even if Google didn't auto-insert the hidden input yet
          formData.set('g-recaptcha-response', token);

          const response = await fetch(form.action, {
            method: "POST",
            body: formData,
          });

          if (response.ok) {
            messageDiv.textContent = "Message sent! Thank you for contacting us.";
            messageDiv.className = "text-center mt-4 text-lg font-semibold text-green-600";
            form.reset();
            grecaptcha.reset(); // reset invisible widget
          } else {
            const errorText = await response.text();
            messageDiv.textContent = "Error: " + errorText;
            messageDiv.className = "text-center mt-4 text-lg font-semibold text-red-600";
            grecaptcha.reset();
          }
        } catch (err) {
          messageDiv.textContent = "Error sending message.";
          messageDiv.className = "text-center mt-4 text-lg font-semibold text-red-600";
          grecaptcha.reset();
        }
      }

      // Bind the button to trigger the invisible CAPTCHA
      btn.addEventListener('click', () => {
        grecaptcha.execute();
      });

      // Keep your divider animation init
    </script>

    <!-- Load fade-in + divider animations -->
    <script src="/loadAnimations.js" is:inline></script>

    <!-- Fallback for already-visible dividers -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.divider-line').forEach(divider => {
          divider.classList.add('animate');
        });
      });
    </script>
  </body>
</html>
